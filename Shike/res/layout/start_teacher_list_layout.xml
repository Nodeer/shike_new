<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical">

    <include layout="@layout/title_layout" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/jieduan_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/gray_btn_bg"
            android:drawableRight="@drawable/pulldown1"
            android:text="选择地区"
            style="@style/text_16_black" />

        <TextView
            android:id="@+id/xueke_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:gravity="center"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/gray_btn_bg"
            android:drawableRight="@drawable/pulldown1"
            android:text="选择学科"
            style="@style/text_16_black" />

        <TextView
            android:id="@+id/diqu_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center"
            android:paddingRight="5dp"
            android:background="@drawable/gray_btn_bg"
            android:drawableRight="@drawable/pulldown1"
            android:text="选择地区"
            style="@style/text_16_black" />
    </LinearLayout>

    <com.yshow.shike.widget.XListView
        android:id="@+id/start_listView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:divider="@color/ui_bg_divider"
        android:dividerHeight="1px"
        android:listSelector="@color/white"
        android:layout_marginTop="10dp" />
</LinearLayout>
