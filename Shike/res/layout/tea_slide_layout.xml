<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
        android:layout_width="fill_parent"
        android:padding="20dp"
        android:background="@drawable/slide_up_bg"
        android:layout_height="100dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="80dp"
                android:id="@+id/stu_headicon"
                android:layout_height="80dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/text_14_white"
                    android:id="@+id/username"
                    android:text="用户名:阿童木" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/grade"
                    style="@style/text_14_white"
                    android:layout_marginTop="5dp"
                    android:text="授    课:小学一年级" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fenbi_num"
                    style="@style/text_14_white"
                    android:layout_marginTop="5dp"
                    android:text="粉笔数:100" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="110dp"
                    android:clickable="true"
                    android:background="@drawable/stu_slide_btn2_bg"
                    android:id="@+id/find_tea_btn"
                    android:layout_height="110dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerInParent="true"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:src="@drawable/find_tea_bg"
                            android:duplicateParentState="true"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            style="@style/text_14_white"
                            android:text="找老师" />
                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="110dp"
                    android:clickable="true"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/restudy_btn"
                    android:background="@drawable/stu_slide_btn2_bg"
                    android:layout_height="110dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerInParent="true"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:src="@drawable/restudy_bg"
                            android:duplicateParentState="true"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            style="@style/text_14_white"
                            android:text="复习" />
                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="110dp"
                    android:clickable="true"
                    android:background="@drawable/slide_btn3_bg"
                    android:id="@+id/account_btn"
                    android:layout_height="110dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerInParent="true"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:src="@drawable/account_bg"
                            android:duplicateParentState="true"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            style="@style/text_14_white"
                            android:text="账户充值" />
                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="110dp"
                    android:clickable="true"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/user_info_btn"
                    android:background="@drawable/slide_btn4_bg"
                    android:layout_height="110dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerInParent="true"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:src="@drawable/userinfo_btn_bg"
                            android:duplicateParentState="true"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            style="@style/text_14_white"
                            android:text="个人信息" />
                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="110dp"
                    android:clickable="true"
                    android:id="@+id/share_btn"
                    android:background="@drawable/slide_btn5_bg"
                    android:layout_height="110dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerInParent="true"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:src="@drawable/share_bg"
                            android:duplicateParentState="true"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            style="@style/text_14_white"
                            android:text="分享" />
                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="110dp"
                    android:clickable="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/slide_btn6_bg"
                    android:id="@+id/about_shike_btn"
                    android:layout_height="110dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerInParent="true"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:src="@drawable/about_shike_bg"
                            android:duplicateParentState="true"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            style="@style/text_14_white"
                            android:text="关于师课" />
                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="110dp"
                android:clickable="true"
                android:layout_marginTop="10dp"
                android:id="@+id/exit_btn"
                android:background="@drawable/slide_btn7_bg"
                android:layout_height="110dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/exit_btn_bg"
                        android:duplicateParentState="true"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        style="@style/text_14_white"
                        android:text="退出" />
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

    </ScrollView>


</LinearLayout>