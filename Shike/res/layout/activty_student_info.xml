<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/main_bg">

    <include layout="@layout/title_layout" />

    <View style="@style/list_cell_divider" />

    <LinearLayout
        android:id="@+id/ll_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/white">
        　　　

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">

            <ImageView
                android:id="@+id/tudent_picture"
                android:layout_width="80dp"
                android:layout_height="80dp" />

        </FrameLayout>

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_stu_nick"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:paddingLeft="6dp"
                android:text="用户名：阿童木"
                style="@style/text_16_black" />

            <TextView
                android:id="@+id/tv_stu_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="3dp"
                android:paddingLeft="6dp"
                android:visibility="gone"
                android:text="姓    名：王小明"
                style="@style/text_16_333333" />

            <TextView
                android:id="@+id/tv_stu_day"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="3dp"
                android:paddingLeft="6dp"
                android:text="学龄段：小学一年级"
                style="@style/text_16_333333" />

        </LinearLayout>

    </LinearLayout>


    <View style="@style/list_cell_divider" />


    <TextView
        android:id="@+id/tv_jieti_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提问次数："
        android:layout_margin="20dp"
        style="@style/text_16_333333" />

    <View style="@style/list_cell_divider" />

    <TextView
        android:id="@+id/tv_zan_coun"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="所在地区：上海浦东"
        style="@style/text_16_333333" />

    <View style="@style/list_cell_divider" />

    <LinearLayout
        android:id="@+id/ll_teacher_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/action_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自我介绍："
            style="@style/text_16_333333" />

        <TextView
            android:id="@+id/tv_guan_zhu"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="很抱歉,我还没有填写自我介绍"
            style="@style/text_16_333333" />
    </LinearLayout>
</LinearLayout>