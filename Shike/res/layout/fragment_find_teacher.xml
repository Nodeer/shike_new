<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/main_bg">

    <include layout="@layout/title_layout" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_height="fill_parent">


            <LinearLayout
                android:layout_width="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="140dp"
                    android:clickable="true"
                    android:background="@drawable/stu_slide_btn1_bg"
                    android:id="@+id/online_tea_btn"
                    android:layout_height="140dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerInParent="true"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:src="@drawable/online_tea_big_icon"
                            android:duplicateParentState="true"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            style="@style/text_14_white"
                            android:text="在线老师" />
                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="140dp"
                    android:clickable="true"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/my_tea_btn"
                    android:background="@drawable/stu_slide_btn2_bg"
                    android:layout_height="140dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerInParent="true"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:src="@drawable/my_tea_big_icon"
                            android:duplicateParentState="true"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            style="@style/text_14_white"
                            android:text="我的老师" />
                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:padding="10dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="140dp"
                    android:clickable="true"
                    android:background="@drawable/stu_slide_btn1_bg"
                    android:id="@+id/tuijian_tea_btn"
                    android:layout_height="140dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerInParent="true"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:src="@drawable/tuijian_tea_big_nor"
                            android:duplicateParentState="true"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            style="@style/text_14_white"
                            android:text="推荐老师" />
                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="140dp"
                    android:clickable="true"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/mingxing_tea_btn"
                    android:background="@drawable/stu_slide_btn2_bg"
                    android:layout_height="140dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerInParent="true"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:src="@drawable/mingxing_tea_big_nor"
                            android:duplicateParentState="true"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            style="@style/text_14_white"
                            android:text="明星老师" />
                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:padding="10dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="140dp"
                    android:clickable="true"
                    android:id="@+id/search_tea_btn"
                    android:background="@drawable/stu_slide_btn2_bg"
                    android:layout_height="140dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerInParent="true"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:src="@drawable/search_tea_big_nor"
                            android:duplicateParentState="true"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            style="@style/text_14_white"
                            android:text="搜索老师" />
                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="140dp"
                    android:clickable="true"
                    android:layout_marginLeft="20dp"
                    android:layout_height="140dp"></RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>