<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="5dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_teather_picture"
            android:layout_width="53dp"
            android:layout_height="53dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginLeft="2dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_nicheng"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                style="@style/text_16_black"
                android:text="王老师" />

            <TextView
                android:id="@+id/tv_isonline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                style="@style/text_16_333333" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/ui_bg_divider" />

            <TextView
                android:id="@+id/tv_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="科目"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                style="@style/text_16_333333" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/ui_bg_divider" />

            <TextView
                android:id="@+id/tv_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="年级"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                style="@style/text_16_333333" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/ui_bg_divider" />

            <TextView
                android:id="@+id/tv_diqu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地区"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                style="@style/text_16_333333" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/ui_bg_divider" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_gerenxinxi"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:maxLines="2"
            android:layout_marginLeft="5dp"
            android:ellipsize="end"
            style="@style/text_14_gray"
            android:text="我是老dddddddddddddd师地区" />
    </LinearLayout>
</LinearLayout>