<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/main_bg"
    android:orientation="vertical">

    <include layout="@layout/title_layout" />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="用户名:"
                android:gravity="right"
                style="@style/text_16_333333" />

            <EditText
                android:id="@+id/login_name_edit"
                android:layout_width="fill_parent"
                android:layout_marginLeft="5dp"
                android:layout_height="48dp"
                android:background="@drawable/white_btn_nor"
                android:gravity="center_vertical"
                android:paddingBottom="5dp"
                style="@style/text_16_gray"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:singleLine="true"></EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="密码:"
                android:gravity="right"
                style="@style/text_16_333333" />

            <EditText
                android:id="@+id/login_password_edit"
                android:layout_width="fill_parent"
                android:layout_marginLeft="5dp"
                android:layout_height="48dp"
                android:background="@drawable/white_btn_nor"
                android:gravity="center_vertical"
                android:paddingBottom="5dp"
                style="@style/text_16_gray"
                android:hint="请输入密码(6-14个字符)"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:singleLine="true"></EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="确认密码:"
                android:gravity="right"
                style="@style/text_16_333333" />

            <EditText
                android:id="@+id/login_password_confirm_edit"
                android:layout_width="fill_parent"
                android:layout_marginLeft="5dp"
                android:layout_height="48dp"
                android:background="@drawable/white_btn_nor"
                android:gravity="center_vertical"
                android:paddingBottom="5dp"
                style="@style/text_16_gray"
                android:hint="请再次输入密码"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:singleLine="true"></EditText>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="学龄段:"
                android:gravity="right"
                android:layout_gravity="center_vertical"
                style="@style/text_16_333333" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:background="@drawable/white_btn_nor"
                android:layout_marginLeft="5dp"
                android:id="@+id/xuelingduan_btn"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/xuelingduan_text"
                    android:layout_height="fill_parent" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="fill_parent"
                    android:src="@drawable/pulldown1"
                    android:scaleType="centerInside"
                    android:background="@drawable/gray_btn_bg" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="阶段:"
                android:gravity="right"
                android:layout_gravity="center_vertical"
                style="@style/text_16_333333" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:background="@drawable/white_btn_nor"
                android:layout_marginLeft="5dp"
                android:id="@+id/jieduan_btn"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/jieduan_text"
                    android:layout_height="fill_parent" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="fill_parent"
                    android:src="@drawable/pulldown1"
                    android:scaleType="centerInside"
                    android:background="@drawable/gray_btn_bg" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="地区:"
                android:gravity="right"
                android:layout_gravity="center_vertical"
                style="@style/text_16_333333" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:background="@drawable/white_btn_nor"
                android:layout_marginLeft="5dp"
                android:id="@+id/diqu_btn"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/diqu_text"
                    android:layout_height="fill_parent" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="fill_parent"
                    android:src="@drawable/pulldown1"
                    android:scaleType="centerInside"
                    android:background="@drawable/gray_btn_bg" />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/next_btn"
        android:layout_width="fill_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:text="确认"
        style="@style/text_30_white"
        android:padding="10dp"
        android:background="@drawable/blue_btn_bg"
        android:layout_marginRight="30dp"
        android:layout_height="wrap_content" />


</LinearLayout>