<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/main_bg"
    android:padding="5dp">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_message_teacher"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/teather_stu_picture" />

        <TextView
            android:id="@+id/tv_message_updatanum"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="right|bottom"
            android:background="#FF0000"
            android:gravity="center"
            android:text="10"
            android:textSize="13sp"
            android:textColor="@color/button_typeface_color"
            android:visibility="invisible" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/message_item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_message_teacher_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="爱飞的鱼"
                    style="@style/text_16_black" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_small_gift"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/liwu1"
                        android:gravity="center"
                        android:drawablePadding="5dp"
                        android:textColor="@color/button_typeface_color"
                        android:visibility="gone"
                        android:text="wolaiye" />

                    <TextView
                        android:id="@+id/tv_message_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        style="@style/text_14_gray" />


                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_message_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:30"
                android:layout_marginTop="5dp"
                style="@style/text_14_gray" />

            <Button
                android:id="@+id/bt_cancle_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="撤销"
                android:visibility="gone" />
        </LinearLayout>

        <Button
            android:id="@+id/bt_delete_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:text="删除"
            android:visibility="gone" />
    </FrameLayout>
</LinearLayout>